<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlanDetailActivity"
    android:background="#FFFFFF">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_marginBottom="7dp"
            android:id="@+id/plan_detail_img"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_launcher_background"
            android:contentDescription="TODO"
            tools:ignore="VectorDrawableCompat" />


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tour Date: "
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_alignParentBottom="true"
                        android:id="@+id/editTextDate1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tour Planner: "
                        android:textColor="@color/black" />



                    <TextView
                        android:layout_alignParentBottom="true"
                        android:id="@+id/row_plan_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@color/black" />


                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_weight="3"
                android:gravity="right"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/plan_detail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4000"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/- BDT"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="@color/colorAccent" />


            </LinearLayout>

        </LinearLayout>



        <TextView
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/plan_detail_contact2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textStyle="normal"
            android:textColor="@android:color/black"
            android:textSize="12sp"/>



        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/plan_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="17sp"/>


        <TextView
            android:id="@+id/plan_detail_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:text="TextView"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="normal" />


        <Button
            android:id="@+id/approve_plan"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_margin="15dp"
            android:background="@drawable/btn_style"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Approve"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/booked"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_margin="15dp"
                android:background="@drawable/btn_style"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Booked"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/msg"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_margin="15dp"
                android:background="@drawable/btn_style"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Send Request"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />



        </LinearLayout>

    </LinearLayout>



</RelativeLayout>